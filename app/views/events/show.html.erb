<% if @event.visual_image.attached? %>
  <div class="relative">
    <%= image_tag @event.visual_image.variant(resize_to_fill: [600, 250]), class: "w-full contrast-50 blur-sm" %>
    <h1 class="truncate absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 font-semibold text-3xl md:text-5xl lg:text-9xl">イベント詳細</h1>
  </div>
<% end %>

<div class="m-5">
  <div class="mb-5">
    <h1 class="text-center text-xl md:text-2xl font-semibold mb-2"><%= @event.name %></h1>
    <p>
    日時：<%= @event.date %><br>
    会場：<%= @event.place_prefecture %>／<%= @event.place %><br>
      <% if @event.remark.present? %>
        備考：<%= @event.remark %>
      <% end %>
    </p>
  </div>

  <% if @event.tour_id %>
    <div class="card-actions justify-end mb-5">
        <%= link_to "ツアー詳細", tour_path(@event.tour_id), class: 'btn btn-primary' %>
    </div>
  <% end %>

  <% if @setlistitems.present? %>
    <div class="divider mb-5">
      <h2 class="font-bold text-lg md:text-2xl lg:text-3xl">セットリスト</h2>
    </div>
      <div class="avatar flex items-center justify-end mb-5">
        <p class="">作成者：<p>
        <div class="w-6 rounded-full mr-2">
          <img src="<%= @event.setlist.user.image %>" />
        </div>
        <p><%= @event.setlist.user.name %><p>
      </div>
    <%= render 'events/setlistitem', setlistitems: @setlistitems %>
  <% else %>
    <%= link_to "セットリストを投稿", new_event_setlist_path(params[:id]), class: 'btn btn-primary' %>
  <% end %>

  <div class="divider"></div>

  <%= render 'events/event_information', infos: @event_infos %>
</div>