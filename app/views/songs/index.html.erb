<div class="m-5">
  <h1 class="flex justify-center text-3xl mb-5">
    <%= title "楽曲一覧" %>
  </h1>

  <div class="grid justify-items-end mb-7">
    <%= render partial: "songs/modals/search_form_modal" %>
  </div>

  <div class="flex justify-center">
    <div class="sm:grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 md:grid-3 gap-5 md:gap-8 w-full">
      <% if @songs.present? %>
        <%= render partial: 'songs/song', collection: @songs %>
      <% else %>
        <div class="mb-3">楽曲情報がありません</div>
    <% end %>
    </div>
  </div>
</div>

<%= paginate @songs %>