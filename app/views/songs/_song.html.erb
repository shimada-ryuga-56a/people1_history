<div class="card card-compact bg-base-100 w-96 shadow-xl mx-2 mb-5">
  <figure>
  <% if song.jk.attached? %>
    <%= image_tag song.jk %>
  <% else %>
    <img
      src="https://img.daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.webp"
      alt="Shoes" />
  <% end %>
  </figure>
  <div class="card-body">
    <h2 class="card-title"><%= song.name %></h2>
    <div class="card-actions justify-end">
      <%= link_to "Details", song_path(song), class: 'btn btn-primary' %>
    </div>
  </div>
</div>
