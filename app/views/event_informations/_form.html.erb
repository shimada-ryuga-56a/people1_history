        <%= f.text_area :body, class: "textarea w-full mb-4 border-slate-400",
          placeholder: event_information_hint %>
        <div class="card-actions">
          <%= f.submit '投稿', class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>