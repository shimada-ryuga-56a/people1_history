<div class="m-5">
  <h1 class="flex justify-center text-3xl mb-5">
    <%= title "メンバー一覧" %>
  </h1>

  <div class="flex justify-center">
    <% if @members.present? %>
      <div class="sm:grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 md:grid-3 gap-5 md:gap-8 w-full">
        <%= render partial: 'members/member', collection: @members %>
      </div>
    <% else %>
      <div class="mb-3">メンバー情報がありません</div>
    <% end %>
  </div>
</div>