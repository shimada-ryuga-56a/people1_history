<div class="m-5">
  <h1 class="flex justify-center text-3xl mb-5">
    <%= title "メンバー一覧" %>
  </h1>

  <div class="flex justify-center">
    <% if @members.present? %>
      <div class="md:grid md:grid-cols-3">
        <%= render partial: 'members/member', collection: @members %>
      </div>
    <% else %>
      <div class="mb-3">メンバー情報がありません</div>
    <% end %>
  </div>
</div>