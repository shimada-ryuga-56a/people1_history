<% if tour_information.liked_by?(current_user) %>
  <%= link_to tour_information_likes_on_tour_informations_path(tour_information), data: { "turbo-method": :delete } do %>
    <i class="fa-solid fa-heart"></i>
    <%= tour_information.likes_on_tour_informations.count %> いいね
  <% end %>
<% else %>
  <%= link_to tour_information_likes_on_tour_informations_path(tour_information), data: { "turbo-method": :post } do %>
    <i class="fa-regular fa-heart"></i>
    <%= tour_information.likes_on_tour_informations.length %> いいね
  <% end %>
<% end %>
