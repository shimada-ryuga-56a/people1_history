<%= turbo_frame_tag information do %>
  <div class="text-sm md:text-base">
    <% if information.liked_by?(current_user) %>
      <%= link_to information_likes_on_informations_path(information_id: information.id), data: { "turbo-method": :delete } do %>
        <i class="fa-solid fa-heart"></i>
      <% end %>
      <%= information.likes_on_informations.count %> いいね
    <% else %>
      <%= link_to information_likes_on_informations_path(information_id: information.id), data: { "turbo-method": :post } do %>
        <i class="fa-regular fa-heart"></i>
      <% end %>
      <%= information.likes_on_informations.count %> いいね
    <% end %>
  </div>
<% end %>